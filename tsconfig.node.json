{
  "compilerOptions": {
    "composite": true,                    // 生成并维护该子模块编译所需的信息

    "module": "ESNext",                   // 此项目选择的模块化标准
    "moduleResolution": "bundler",        // 模块解析策略
    "skipLibCheck": true,                 // 跳过声明文件的类型检查
    "allowSyntheticDefaultImports": true, // 允许导入模块语法

    "strict": true,                       // 类型严格检查
    "alwaysStrict": true,                 // 强严格检查(提高性能)
  },
  "include": [ "vite.config.ts" ]
}
