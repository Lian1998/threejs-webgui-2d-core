{
    "name": "applications-template",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc && vite build",
        "preview": "vite preview",
        "format": "npx prettier . --config .prettierrc.cjs --write",
        "githook:install": "npx husky install"
    },
    "devDependencies": {
        "@commitlint/cli": "^18.6.0",
        "@commitlint/config-conventional": "^18.6.0",
        "@types/node": "^20.11.17",
        "@vitejs/plugin-vue": "^5.0.3",
        "@vitejs/plugin-vue-jsx": "^3.1.0",
        "husky": "^9.0.10",
        "lint-staged": "^15.2.2",
        "prettier": "^3.2.5",
        "typescript": "^5.2.2",
        "vite": "^5.1.0",
        "vue-tsc": "^1.8.27"
    },
    "dependencies": {
        "vue": "^3.4.15"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx lint-staged",
            "commit-msg": "npx commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{js,jsx,vue,ts,tsx,json,css,scss,less}": [
            "prettier --write",
            "git add"
        ]
    }
}
